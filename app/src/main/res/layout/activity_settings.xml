<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.ishow.common.widget.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImage="@drawable/ic_back_white"
        app:secretable="true"
        app:text="@string/settings"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.ishow.common.widget.edittext.EditTextPro
            android:id="@+id/now_version"
            style="@style/EditTextPro.Item"
            android:paddingEnd="@dimen/gap_grade_8"
            android:paddingStart="@dimen/gap_grade_1"
            app:inputTextSize="@dimen/I_title"
            app:leftImage="@drawable/ic_version"
            app:leftImageVisibility="visible"
            app:leftText="@string/settings_link_now_version"/>
    </LinearLayout>

</LinearLayout>